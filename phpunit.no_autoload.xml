<phpunit bootstrap="tests/bootstrap.no_autoload.php" colors="true">
	<testsuites>
		<testsuite name="PHP Test Suite">
			<directory suffix="Test.php">tests</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist>
			<directory>src</directory>
		</whitelist>
	</filter>
	<logging>
		<log type="coverage-clover" target="clover.xml"/>
	</logging>
</phpunit>